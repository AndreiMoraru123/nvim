[
  {
    "key": "ctrl+u",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "editorScroll",
          "args": {
            "to": "up",
            "by": "halfPage"
          }
        },
        {
          "command": "cursorMove",
          "args": { "to": "viewPortCenter" }
        }
      ]
    }
  },
  {
    "key": "ctrl+d",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "editorScroll",
          "args": {
            "to": "down",
            "by": "halfPage"
          }
        },
        {
          "command": "cursorMove",
          "args": { "to": "viewPortCenter" }
        }
      ]
    }
  },
  {
    "key": "ctrl+y",
    "command": "acceptSelectedSuggestion",
    "when": "editorTextFocus && suggestWidgetVisible && !editorReadonly && neovim.mode == insert"
  },
  {
    "key": "ctrl+e",
    "command": "editor.action.marker.next",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+h",
    "command": "editor.showCallHierarchy",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+r",
    "command": "workbench.action.terminal.runRecentCommand",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+/",
    "command": "workbench.action.chat.open",
    "when": "!chatSetupDisabled && !chatSetupHidden"
  },
  {
    "key": "ctrl+/",
    "command": "workbench.action.chat.toggle",
    "when": "!chatSetupDisabled && !chatSetupHidden"
  },
  {
    "key": "ctrl+alt+i",
    "command": "-workbench.action.chat.open",
    "when": "!chatSetupDisabled && !chatSetupHidden"
  }
]
